<% content_for :browser_title, "Iron - Final Steps" %>
<% content_for :page_header, "Final Steps" %>
<% content_for :page_types, :splash %>

<section id="final-steps" class="page">
  <h2 class="page-title">
    <strong>Final Steps</strong>
  </h2>

  <%= form_for(resource, as: resource_name, url: accounts_confirmation_path(params[:id]), html: { method: :put }) do |f| %>
    <% resource.errors.full_messages.each do |message| %>
      <section class="alert alert-danger" role="alert">
        <%= message %>!
      </section>
    <% end %>

    <section class="form-group">
      <%= f.label :name, "What's your name?" %>
      <%= f.text_field :name, autofocus: true, required: true, class: "form-control" %>
    </section>

    <section class="form-group">
      <%= f.label :password, "What password do you want?" %>
      <%= f.password_field :password, required: true, class: "form-control" %>
    </section>

    <section class="call-to-action btn-group">
      <%= f.submit "Complete my account", class: "btn btn-link link-primary" %>
      <%= render "accounts/shared/links" %>
    </section>
  <% end %>
</section>
